{
  "compilerOptions": {
    // vscode
    "strict": true,
    "forceConsistentCasingInFileNames": true,

    // project
    "noEmit": true,
    "incremental": true,
    "skipLibCheck": true,
    "lib": ["ES2020"],
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
